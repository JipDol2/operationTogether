{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "include": [
    "src/**/*"
  ]
}
