{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata" : true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2017",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "include": [
    "src/**/*"
  ]
}
